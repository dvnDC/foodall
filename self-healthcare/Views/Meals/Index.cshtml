@model IEnumerable<self_healthcare.Models.Meal>

@{
    ViewData["Title"] = "Index";
}

<header class="masthead" style="background-image: url('Images/bg6.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>MealCreator</h1>
                    <span class="subheading">---</span>
                </div>
            </div>
        </div>
    </div>
</header>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServingSizeGrams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServingSizeGrams)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MealID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MealID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MealID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
